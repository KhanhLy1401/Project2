extends ../../layouts/default.pug 

block main 
    .container.my-3
        .row
            .col-12
                p <b> Đơn hàng </b>
        .row
            .col-12
                table(
                        class="table table-hover table-sm"
                    )
                        thead
                            tr
                                th STT
                                th Họ tên
                                th Số điện thoại
                                th Địa chỉ
                                th Sản phẩm
                                th Thanh toán
                        tbody
                            each item, index in order
                                tr
                                    td #{index+1}
                                    
                                    td #{item.userInfo.fullName}
                                    td #{item.userInfo.phone}
                                    td #{item.userInfo.address}
                                    td 
                                        each product in item.products
                                            p #{product.productInfo.title}  -  #{product.quantity} 
                                    td 
                                        p #{item.totalPrice}